<%= form_for(intern, :html => { multipart: true }) do |f| %>
  <% if intern.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(intern.errors.count, "error") %> prohibited this intern from being saved:</h2>

      <ul>
      <% intern.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="top-content">
    <div class="inner-bg">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-8">
              <div class="form-box">
                <div class="form-top">
                  <div class="form-top-left">
                    <h1>Account Registration.<span class="blinking-cursor">_</span></h1>
                      <p>Fill in the form below to get instant access:</p>
                  </div>
                </div>

                    <div class="form-bottom">
                      <form role="form" action="" method="post" class="registration-form">
                        <div class="form-group">

                            <%= f.text_field :fullName, placeholder:"Full Name ..." %>
                        </div>
                        <div class="field">

                            <%= f.text_field :otherName, placeholder:"Other Names ..." %>
                        </div>
                        <div class="field">

                            <%= f.text_field :institution, placeholder: "Institution (University) ..." %>
                        </div>
                        <div class="field">

                            <%= f.text_field :registrationNumber, placeholder: "Registration Number ..." %>
                        </div>
                        <div class="field">

                            <%= f.text_field :program, placeholder: "Program ..." %>
                        </div>
                        <div class="field">

                            <%= f.text_field :year, placeholder: "Year Of Study (I,II,IV,) ..." %>
                        </div>
                        <div class="field">

                            <%= f.text_field :gender, placeholder: "Gender ..." %>
                           
                        </div>
                        <div class="field">

                            <%= f.text_field :emailAdress, placeholder: "Email Address (example@something.com)" %>
                        </div>
                        <div class="field">

                            <%= f.file_field :profilePic, class: "form-control" %>
                        </div>
                        <div class="actions">
                           <button type="submit" class="btn">Sign me up!</button>
                        </div>
                        </form>
                    </div>
                 </div>


             </div>

             


         </div>
      </div>
  </div>
  <% end %>